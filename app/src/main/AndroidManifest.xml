<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuxiaolong.androidsamples" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".photograph.PhotographActivity"
            android:label="@string/title_activity_photograph" />
        <activity
            android:name=".download.DownloadActivity"
            android:label="@string/title_activity_download" >
        </activity>
        <activity
            android:name=".download.DownloadingActivity"
            android:label="@string/title_activity_downloading" >
        </activity>
    </application>

</manifest>
