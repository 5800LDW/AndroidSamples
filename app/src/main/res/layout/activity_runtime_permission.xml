<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.wuxiaolong.runtimepermissionutil.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="日历"/>

            <Button
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="照相机"/>

            <Button
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="通讯录"/>

            <Button
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="定位"/>

            <Button
                android:id="@+id/microPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="录音"/>

            <Button
                android:id="@+id/readPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="读取手机状态"/>

            <Button
                android:id="@+id/sensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="传感器"/>

            <Button
                android:id="@+id/sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="短信"/>

            <Button
                android:id="@+id/storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="文件管理"/>

            <Button
                android:id="@+id/contactsLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="多个权限"/>

            <Button
                android:id="@+id/easyPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPermission"
                android:text="EasyPermissions"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
